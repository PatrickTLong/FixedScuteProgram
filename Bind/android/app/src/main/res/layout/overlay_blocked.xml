<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overlay_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#28282B"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp"
        android:clickable="false"
        android:focusable="false">

        <!-- Top spacer to push content up -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.15" />

        <!-- Scute Logo -->
        <ImageView
            android:id="@+id/overlay_logo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/scute_logo"
            android:tint="#FFFFFF"
            android:layout_marginBottom="-60dp"
            android:clickable="false"
            android:focusable="false" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blocked"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginBottom="12dp"
            android:clickable="false"
            android:focusable="false" />

        <!-- Message -->
        <TextView
            android:id="@+id/overlay_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This app is blocked."
            android:textColor="#9CA3AF"
            android:textSize="16sp"
            android:fontFamily="@font/nunito"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:clickable="false"
            android:focusable="false" />

        <!-- Continue anyway button (only visible in non-strict mode) -->
        <TextView
            android:id="@+id/overlay_continue_button"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:text="Continue anyway"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_continue_anyway"
            android:visibility="gone" />

        <!-- Tap to dismiss hint -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap anywhere to dismiss"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="@font/nunito"
            android:layout_marginTop="32dp"
            android:clickable="false"
            android:focusable="false" />

        <!-- Bottom spacer to balance layout -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

    </LinearLayout>

</FrameLayout>
