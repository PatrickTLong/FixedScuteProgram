<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/blocked_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#28282B"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp">

        <!-- Top spacer to push content up (matches React Native -20% marginTop) -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.15" />

        <!-- Scute Logo (250dp to match React Native overlay size) -->
        <ImageView
            android:id="@+id/blocked_logo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/scute_logo"
            android:tint="#FFFFFF"
            android:layout_marginBottom="-60dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blocked"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:layout_marginBottom="12dp" />

        <!-- Message -->
        <TextView
            android:id="@+id/blocked_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This app is blocked."
            android:textColor="#9CA3AF"
            android:textSize="16sp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3" />

        <!-- Tap to dismiss hint -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap anywhere to dismiss"
            android:textColor="#6B7280"
            android:textSize="12sp"
            android:layout_marginTop="32dp" />

        <!-- Bottom spacer to balance layout -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

    </LinearLayout>

</FrameLayout>
